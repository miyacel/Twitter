<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>Twiter</h1>
      <%= link_to "作成する", new_tweet_path, class: 'btn btn-default' %>
    <% @tweets.each do |tweet| %>
    <div class="row">
      <p><%= tweet.content %></p>
      <%= link_to "編集", edit_tweet_path(tweet.id), data: { confirm: '本当に編集していいですか？'} %>
      <%= link_to "削除", tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？'} %>
    </div>
    <% end %>
  </div>
</div>
