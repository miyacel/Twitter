<%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
  <% if @tweet.error.any? %>
    <div id="error_explanation">
      <h2><%= @tweet.error.count %>件のエラーがあります。</h2>
      
      <ul>
      <% @tweet.error.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<% link_to "一覧画面に戻る", tweets_path %>